{
  "name": "axe-watcher-example",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dequelabs/axe-watcher-example",
  "author": "michael-siek <michaelsiek094@gmail.com>",
  "license": "MIT",
  "scripts": {
    "fmt": "prettier --write \"src/**/*.{js,ts,tsx,json,md,css,html}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,html}": [
      "prettier --write"
    ]
  }
}
